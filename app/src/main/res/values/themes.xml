<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelCharacters" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.RetrofitAdapter.ShapeableImage.Round" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="ShapeAppearanceOverlay.RetrofitAdapter.ShapeableImage.Round.Reverse" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">5%</item>
        <item name="cornerSizeBottomRight">5%</item>
    </style>

    <style name="ShapeAppearanceOverlay.RetrofitAdapter.ShapeableImage.Round.Bottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/corner_radius_img_detail</item>
        <item name="cornerSizeBottomRight">@dimen/corner_radius_img_detail</item>
    </style>
</resources>